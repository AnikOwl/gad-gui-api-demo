{
  "openapi": "3.0.1",
  "info": {
    "title": "ðŸ¦Ž GAD ",
    "description": "This is a sample REST server form jaktestowac.pl team.</br></br>Return to <a target='_blank' href='../tools/index.html' rel='noopener noreferrer' class='link'><strong>TOOLSðŸ”¨</strong></a>",
    "termsOfService": "http://jaktestowac.pl/",
    "version": "1.3.3"
  },
  "servers": [
    {
      "url": "/api"
    },
    {
      "url": "http://localhost:3000/api"
    }
  ],
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    },
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "username": { "type": "string" },
          "email": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "avatar": { "type": "string" },
          "joinDate": {
            "type": "string",
            "format": "date"
          },
          "role": {
            "type": "string",
            "enum": ["student", "instructor"]
          }
        }
      },
      "Course": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "description": { "type": "string" },
          "thumbnail": { "type": "string" },
          "instructor": { "type": "string" },
          "duration": { "type": "string" },
          "totalHours": { "type": "number" },
          "level": { "type": "string" },
          "students": { "type": "integer" },
          "rating": { "type": "number" },
          "tags": {
            "type": "array",
            "items": { "type": "string" }
          },
          "prerequisites": {
            "type": "array",
            "items": { "type": "string" }
          },
          "price": { "type": "number" },
          "learningObjectives": {
            "type": "array",
            "items": { "type": "string" }
          }
        }
      },
      "Enrollment": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "courseId": { "type": "integer" },
          "enrollmentDate": {
            "type": "string",
            "format": "date"
          },
          "lastAccessed": { "type": "string" },
          "progress": { "type": "integer" },
          "completed": { "type": "boolean" },
          "completionDate": { "type": "string" },
          "certificateIssued": { "type": "boolean" }
        }
      },
      "Certificate": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "courseId": { "type": "integer" },
          "issueDate": { "type": "string" },
          "certificateNumber": { "type": "string" },
          "courseTitle": { "type": "string" },
          "recipientName": { "type": "string" },
          "issuedBy": { "type": "string" }
        }
      },
      "LoginResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "access_token": { "type": "string" },
          "username": { "type": "string" },
          "id": { "type": "integer" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "avatar": { "type": "string" }
        }
      },
      "LoginRequest": {
        "type": "object",
        "required": ["username", "password"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" }
        }
      },
      "RegisterRequest": {
        "type": "object",
        "required": ["username", "password", "email", "firstName", "lastName"],
        "properties": {
          "username": { "type": "string" },
          "password": { "type": "string" },
          "email": { "type": "string" },
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "avatar": { "type": "string" }
        }
      },
      "LessonContent": {
        "type": "object",
        "properties": {
          "content": {
            "type": "object",
            "properties": {
              "videoUrl": { "type": "string" },
              "transcript": { "type": "string" },
              "text": { "type": "string" },
              "resources": {
                "type": "array",
                "items": { "type": "string" }
              },
              "questions": {
                "type": "array",
                "items": {
                  "$ref": "#/components/schemas/Question"
                }
              }
            }
          }
        }
      },
      "Question": {
        "type": "object",
        "properties": {
          "question": { "type": "string" },
          "options": {
            "type": "array",
            "items": { "type": "string" }
          },
          "correct": { "type": "integer" }
        }
      },
      "CourseProgress": {
        "type": "object",
        "properties": {
          "progress": { "type": "integer" }
        }
      },
      "SuccessResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" }
        }
      },
      "LessonProgress": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer" },
          "courseId": { "type": "integer" },
          "lessonId": { "type": "integer" },
          "completed": { "type": "boolean" },
          "completedAt": { "type": "string" },
          "score": { "type": "integer", "nullable": true }
        }
      },
      "QuizAttempt": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "userId": { "type": "integer" },
          "courseId": { "type": "integer" },
          "lessonId": { "type": "integer" },
          "attemptDate": { "type": "string" },
          "score": { "type": "integer" },
          "passed": { "type": "boolean" },
          "answers": {
            "type": "array",
            "items": { "type": "integer" }
          }
        }
      },
      "UserStats": {
        "type": "object",
        "properties": {
          "coursesInProgress": { "type": "integer" },
          "completedCourses": { "type": "integer" },
          "totalHours": { "type": "number" },
          "totalCertificates": { "type": "integer" },
          "lastUpdated": { "type": "string" }
        }
      },
      "ProfileUpdateRequest": {
        "type": "object",
        "required": ["currentPassword"],
        "properties": {
          "firstName": { "type": "string" },
          "lastName": { "type": "string" },
          "email": { "type": "string" },
          "currentPassword": { "type": "string" }
        }
      },
      "PasswordChangeRequest": {
        "type": "object",
        "required": ["currentPassword", "newPassword"],
        "properties": {
          "currentPassword": { "type": "string" },
          "newPassword": { "type": "string" }
        }
      },
      "ErrorResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      },
      "EnrollmentResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "enrollment": { "$ref": "#/components/schemas/Enrollment" }
        }
      },
      "BadRequestResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      },
      "NotFoundResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" }
        }
      },
      "SuccessMessageResponse": {
        "type": "object",
        "properties": {
          "success": { "type": "boolean" },
          "message": { "type": "string" }
        }
      },
      "LessonList": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" },
          "type": { "type": "string", "enum": ["video", "reading", "quiz"] },
          "duration": { "type": "string" },
          "completed": { "type": "boolean" },
          "content": {
            "type": "object",
            "properties": {
              "videoUrl": { "type": "string" },
              "transcript": { "type": "string" },
              "text": { "type": "string" },
              "resources": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      },
      "LoginFailureResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "remainingAttempts": { "type": "integer" },
          "lockoutTime": { "type": "string", "nullable": true }
        }
      },
      "RateLimitResponse": {
        "type": "object",
        "properties": {
          "error": { "type": "string" },
          "retryAfter": { "type": "integer" }
        }
      },
      "LessonTitle": {
        "type": "object",
        "properties": {
          "id": { "type": "integer" },
          "title": { "type": "string" }
        }
      },
      "CourseRating": {
        "type": "object",
        "properties": {
          "userId": { "type": "integer" },
          "courseId": { "type": "integer" },
          "rating": { "type": "number", "minimum": 1, "maximum": 5 },
          "comment": { "type": "string" },
          "createdAt": { "type": "string", "format": "date-time" },
          "userInfo": {
            "type": "object",
            "properties": {
              "name": { "type": "string" },
              "avatar": { "type": "string" }
            }
          }
        }
      },
      "AuthStatusResponse": {
        "type": "object",
        "properties": {
          "authenticated": { "type": "boolean" },
          "user": {
            "type": "object",
            "properties": {
              "id": { "type": "integer" },
              "email": { "type": "string" },
              "firstName": { "type": "string" },
              "lastName": { "type": "string" },
              "avatar": { "type": "string" }
            }
          }
        }
      }
    },
    "responses": {
      "UnauthorizedError": {
        "description": "User not authenticated",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      },
      "ForbiddenError": {
        "description": "User not authorized",
        "content": {
          "application/json": {
            "schema": {
              "type": "object",
              "properties": {
                "error": { "type": "string" }
              }
            }
          }
        }
      },
      "BadRequest": {
        "description": "Bad request",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/BadRequestResponse"
            }
          }
        }
      },
      "NotFound": {
        "description": "Resource not found",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/NotFoundResponse"
            }
          }
        }
      },
      "UnprocessableEntity": {
        "description": "Validation error",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/ErrorResponse"
            }
          }
        }
      },
      "TooManyRequests": {
        "description": "Too many requests, please try again later",
        "content": {
          "application/json": {
            "schema": {
              "$ref": "#/components/schemas/RateLimitResponse"
            }
          }
        }
      }
    }
  },
  "paths": {
    "/learning/auth/login": {
      "post": {
        "security": [],
        "tags": ["Authentication"],
        "summary": "Login user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/LoginRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Login successful",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginResponse"
                }
              }
            }
          },
          "401": {
            "description": "Invalid credentials",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/LoginFailureResponse"
                }
              }
            }
          },
          "429": {
            "$ref": "#/components/responses/TooManyRequests"
          }
        }
      }
    },
    "/learning/auth/register": {
      "post": {
        "security": [],
        "tags": ["Authentication"],
        "summary": "Register new user",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/RegisterRequest"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Registration successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessResponse" }
              }
            }
          },
          "422": { "$ref": "#/components/responses/UnprocessableEntity" }
        }
      }
    },
    "/learning/courses": {
      "get": {
        "security": [],
        "tags": ["Courses"],
        "summary": "Get all courses",
        "responses": {
          "200": {
            "description": "List of courses",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Course"
                  }
                }
              }
            }
          }
        }
      }
    },
    "/learning/courses/{courseId}": {
      "get": {
        "security": [],
        "tags": ["Courses"],
        "summary": "Get course by ID",
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "Course details",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Course"
                }
              }
            }
          }
        }
      }
    },
    "/learning/courses/{courseId}/enroll": {
      "post": {
        "tags": ["Enrollments"],
        "summary": "Enroll in a course",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["userId"],
                "properties": {
                  "userId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Enrollment successful",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/EnrollmentResponse" }
              }
            }
          },
          "400": { "$ref": "#/components/responses/BadRequest" },
          "401": { "$ref": "#/components/responses/UnauthorizedError" },
          "403": { "$ref": "#/components/responses/ForbiddenError" },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/learning/users/{userId}/enrollments": {
      "get": {
        "tags": ["Enrollments"],
        "summary": "Get user enrollments",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of user enrollments",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Enrollment"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/learning/users/{userId}/certificates": {
      "get": {
        "tags": ["Certificates"],
        "summary": "Get user certificates",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of user certificates",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "certificates": {
                      "type": "array",
                      "items": {
                        "$ref": "#/components/schemas/Certificate"
                      }
                    }
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          }
        }
      }
    },
    "/learning/courses/{courseId}/lessons": {
      "get": {
        "tags": ["Lessons"],
        "summary": "Get course lessons",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "List of course lessons",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/LessonList"
                  }
                }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/learning/courses/{courseId}/lessons/{lessonId}/complete": {
      "post": {
        "tags": ["Lessons"],
        "summary": "Mark lesson as complete",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "courseId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          },
          {
            "name": "lessonId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "required": ["userId"],
                "properties": {
                  "userId": { "type": "integer" }
                }
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Lesson marked as complete",
            "content": {
              "application/json": {
                "schema": { "$ref": "#/components/schemas/SuccessResponse" }
              }
            }
          },
          "401": {
            "$ref": "#/components/responses/UnauthorizedError"
          },
          "403": {
            "$ref": "#/components/responses/ForbiddenError"
          },
          "404": { "$ref": "#/components/responses/NotFound" }
        }
      }
    },
    "/learning/users/{userId}/profile": {
      "put": {
        "tags": ["Users"],
        "summary": "Update user profile",
        "security": [
          {
            "bearerAuth": []
          }
        ],
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "schema": {
              "type": "integer"
            }
          }
        ],
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/ProfileUpdateRequest"
              }
            }
          }
        },
        "responses": {
